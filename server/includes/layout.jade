doctype
html(ng-app='myApp')
    head
        title Stroll or Sprint for Shane
        base(href="/")
        link(rel="stylesheet", href="/vendor/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet", href="/css/site.css")
        .navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#strollorsprintnav" aria-expanded="false")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") Stroll or Sprint for Shane
                .navbar-collapse.collapse(id="strollorsprintnav")
                    ul.nav.navbar-nav
                        li
                            a(href="/about") About Us
                                span.sr-only (current)
                        li
                            a(href="/challenge") Team Challenge
                        li
                            a(href="/stroll") Stroll
                        li 
                            a(href="/register") Register
                        li 
                            a(href="https://www.justgiving.com/fundraising/strollorsprint" target="_blank") Just Giving
                        li 
                            a(href="/location") Find Us
                        li 
                            a(href="/contact") Contact Us
        .container-fluid
            .well
                .col-md-3
                .col-xs-12.col-md-6
                    block main-content
                .col-md-3
        footer.container.text-center
            div(ng-controller="mvMainCtrl")
        include scripts
